    
<% include partials/header %>


<div class="container"> 
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Tech Magazine</h1>
            <p><a class="btn btn-primary btn-lg" href="/articles/new">Add New Articles</a></p>
                </div>
    </header>

    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
           <% articles.forEach(function(article){ %>
        <div class="col-md-3">
            <div class=thumbnail>
            <img src="<%= article.image %>">
            <div class="caption">
            <h4><%= article.name %></h4>
            </div>
            <a  class="btn btn-primary" href="/articles/<%= article.id %>">More Info</a>
            </div>


        </div>

        <% }) %>           

               
    </div>

</div>
    
        <% include partials/footer %>  
    

    
